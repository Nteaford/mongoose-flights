<%- include('../partials/header') %>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Flight Number</th>
                <th scope="col">Airline</th>
                <th scope="col">Airport</th>
                <th scope="col">Departure Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">
                    <%= flight.flightNo %>
                </th>
                <td>
                    <%= flight.airline %>
                </td>
                <td>
                    <%= flight.airport %>
                </td>
                <td>
                    <%= flight.departs %>
                </td>
            </tr>
        </tbody>
    </table> <br> <br> <br>





    <form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
        <h2>Add Flight Destinations:</h2>
        <label>Arrival Date </label><input type="datetime-local" name="arrival"> <br>


        <label>Arrival Airport:</label>
        <select name="airport">
            <option value="AUS">Austin (AUS)</option>
            <option value="DFW">Dallas Fort Worth (DFW)</option>
            <option value="DEN">Denver (DEN)</option>
            <option value="LAX">Los Angeles (LAX)</option>
            <option value="SAN">San Diego (SAN)</option>
        </select> <br>
        <input type="submit" value="Add destination">

    </form> <br><br>


    <%flight.destinations.sort((a,b)=> a.arrival - b.arrival); %>


        <table class="table">
            <h2>Destinations</h2>
            <thead>
                <tr>
                    <th scope="col">Destination Airport</th>
                    <th scope="col">Arrival Date</th>
                </tr>
            </thead>
            <tbody>
                <%flight.destinations.forEach(function(d) { %>
                    <tr>
                        <td>
                            <%=d.airport %>
                        </td>
                        <td>
                            <%= d.arrival %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <%flight.destinations.sort((a,b)=> a.arrival - b.arrival); %>


            <table class="table">
                <h2>Tickets</h2>
                <thead>
                    <tr>
                        <th scope="col">Seat</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    <%tickets.forEach(function(t) { %>
                        <tr>
                            <td>
                                <%=t.seat %>
                            </td>
                            <td>
                                <%= t.price %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>



        <form id="add-ticket-nav" method="GET" action="/flights/<%= flight._id %>/tickets/new">
            <h3>Don't see your ticket?</h3>
            <button type="submit" class="btn btn-primary">Add Ticket Here</button>
        </form>


<%- include('../partials/footer') %>