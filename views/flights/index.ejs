<%- include('../partials/header') %>

<body>
  <h1><%= title %></h1>
  

<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Flight Number</th>
        <th scope="col">Airline</th>
        <th scope="col">Departing Airport</th>
        <th scope="col">Departure Date</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(f) { %>
        <tr>
          <td><a href="/flights/<%= f.id %>"><%= f.flightNo %></a></td>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.departs %></td>
            <td>
                <a href="/flights/<%= f.id %>" class="btn btn-info" role="button" >Details</a>
            </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  
  
  <p> Don't see your flight listed? 
    <a href="/flights/new"> Add flight here </a> 
  </p>
</body>


<%- include('../partials/footer') %>